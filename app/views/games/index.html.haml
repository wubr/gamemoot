.row
  .col
    - if notice
      %p{role: 'alert', class: 'alert alert-info', id: 'notice'}= notice
    %h1 All Games
    %table.table.table-striped
      %thead.thead-default
        %tr
          %th Gamemoot ID
          %th Name
          %th BGG Game ID
          %th{:colspan => "3"}
      %tbody
        - @games.each do |game|
          %tr
            %td= game.id
            %td= game.name
            %td
              %a{href: bgg_url(game.bgg_game_id)}= game.bgg_game_id
            %td= link_to 'Show', game
            %td= link_to 'Edit', edit_game_path(game)
            %td= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }
    %br/
    = link_to 'New Game', new_game_path
